<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    style="@style/rootInfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        style="@style/twoMatchParents"
        android:padding="16dp"
        tools:context=".viewItemPage">

        <androidx.cardview.widget.CardView
            style="@style/viewItemCV"
            android:id="@+id/imgSlideCV"
            android:elevation="10dp">

            <androidx.cardview.widget.CardView
                style="@style/viewItemCV"
                android:layout_margin="10dp">

                <androidx.viewpager.widget.ViewPager
                    android:layout_margin="0dp"
                    android:id="@+id/ImageSlider"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/viewItemCV"
            android:layout_below="@id/imgSlideCV"
            android:id="@+id/cvInfo"
            android:layout_margin="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
               style="@style/twoWrapContents">

                <TextView
                    style="@style/cardTextViewStyle"
                    android:id="@+id/ItemDescription"
                    android:text="Description"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ItemTitle"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    style="@style/cardTextViewStyle"
                    android:id="@+id/ItemTitle"
                    android:layout_centerHorizontal="true"
                    android:text="Item Name"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cvInfo"
            android:textSize="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:text="Buy"
            android:textColor="@color/black"
            android:backgroundTint="#f6ddcc"/>

        <TextView
            android:id="@+id/ItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5.99"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/buyButton"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/cvInfo"
            android:textColor="@color/black"
            />

    </RelativeLayout>

</ScrollView>

