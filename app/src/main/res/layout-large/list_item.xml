<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cardViewProperties"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/itemConstraintProperties">

        <ImageView
            android:id="@+id/img_list_item"
            style="@style/itemImagesLargeSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtItemName"
            android:text="Item Name"
            app:layout_constraintStart_toEndOf="@id/img_list_item"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtItemPrice"
            android:text="Price"
            app:layout_constraintTop_toBottomOf="@id/txtItemName"
            app:layout_constraintStart_toStartOf="@id/txtItemName"
            android:textSize="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>