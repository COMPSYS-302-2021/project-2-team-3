<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LargeCardViewProperties"
    android:id="@+id/cvCategoryItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#f6ddcc"
    app:cardCornerRadius="25dp"
    android:layout_centerHorizontal="true"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category_item_constraint"
            style="@style/itemConstraintProperties">


            <ImageView
                android:id="@+id/imgFlag"
                style="@style/itemImagesLargeSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtCuisine"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="Cuisine"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:padding="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgFlag"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>