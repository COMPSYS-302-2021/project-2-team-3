<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.302Projecct2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DF7F40</item>
        <item name="colorPrimaryVariant">#e59866</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/customAnim</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#DF7F40</item>
        <item name="colorPrimaryVariant">#e59866</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/customAnim</item>
    </style>

    <style name="cardViewProperties">
        <item name= "android:layout_width">340dp</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:layout_margin">10dp</item>
        <item name= "android:padding">5dp</item>
        <item name= "cardElevation">10dp</item>
    </style>
    <style name="LargeCardViewProperties">
        <item name= "android:layout_width">500dp</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:layout_margin">15dp</item>
        <item name= "android:padding">8dp</item>
        <item name= "cardElevation">15dp</item>
        <item name= "android:layout_centerHorizontal">true</item>
        <item name= "android:layout_gravity">center_horizontal</item>
    </style>

    <style name = "itemImagesNormalSize">
        <item name = "android:layout_width">150dp</item>
        <item name = "android:layout_height">150dp</item>
        <item name = "android:src">@drawable/ic_launcher_foreground</item>
    </style>

    <style name = "itemImagesLargeSize">
        <item name = "android:layout_width">200dp</item>
        <item name = "android:layout_height">200dp</item>
        <item name = "android:src">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="itemRelProperties">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

    <style name="itemConstraintProperties">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_margin">10dp</item>
    </style>

    <style name="customAnim" parent = "@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="twoMatchParents">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
    </style>

    <style name="twoWrapContents">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="wrapHeight">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="rootInfo">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:background">@color/background</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="cardTextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="listingItemsText">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name = "android:layout_margin">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="listingRecView">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_centerHorizontal">true</item>
    </style>

    <style name="homepageText">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="viewItemCV">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_centerHorizontal">true</item>
        <item name = "cardBackgroundColor">@color/foregroundColour</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="buyBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name = "android:layout_alignParentLeft">true</item>
        <item name="android:text">Buy</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/foregroundColour</item>
    </style>

    <style name="priceTxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">$5.99</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_below">@+id/cvInfo</item>
        <item name="android:layout_toRightOf">@+id/buyButton</item>
    </style>

    <style name="categoryItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">Cuisine</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toEndOf">@+id/imgFlag</item>
    </style>

    <style name="listPriceTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Price</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintStart_toStartOf">@id/txtItemName</item>
        <item name="layout_constraintTop_toBottomOf">@id/txtItemName</item>
    </style>

    <style name="listNameTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Item Name</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintEnd_toEndOf">@id/parentLayout</item>
        <item name = "layout_constraintStart_toEndOf">@id/imgCV</item>
        <item name = "layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="listItemCV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name = "layout_constraintBottom_toBottomOf">parent</item>
        <item name = "layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="topPicksTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Dish Name</item>
        <item name="android:layout_below">@+id/cvIMG</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@+id/cvIMG</item>
        <item name = "layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="topPicksImg">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="layout_constraintBottom_toTopOf">@+id/txtTopPicksName</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:src">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="topPicksImgCV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name = "cardCornerRadius">15dp</item>
    </style>




</resources>