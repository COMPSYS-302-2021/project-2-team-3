<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.302Projecct2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#e59866</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/customAnim</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="cardViewProperties">
        <item name= "android:layout_width">340dp</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:layout_margin">10dp</item>
        <item name= "android:padding">5dp</item>
        <item name= "cardElevation">10dp</item>
    </style>

    <style name = "itemImagesNormalSize">
        <item name = "android:layout_width">150dp</item>
        <item name = "android:layout_height">150dp</item>
        <item name = "android:src">@drawable/ic_launcher_background</item>
    </style>

    <style name = "itemImagesLargeSize">
        <item name = "android:layout_width">200dp</item>
        <item name = "android:layout_height">200dp</item>
        <item name = "android:src">@drawable/ic_launcher_background</item>
    </style>

    <style name="itemRelProperties">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

    <style name="itemConstraintProperties">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

    <style name="customAnim" parent = "@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>


</resources>